<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.first.Main2Activity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAf4DE"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="     "
        android:gravity="center"
        android:layout_gravity="center"
        />
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        app:srcCompat="@drawable/braile" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="파일 찾아 읽기"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="     "
        android:gravity="center"
        android:layout_gravity="center"
        />
    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="120dp"
        android:layout_height="140dp"

        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_stat_name" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:text="변환 파일 찾기"
        android:layout_gravity="center"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="      "
        android:gravity="center"
        android:layout_gravity="center"
        />
    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        app:srcCompat="@drawable/camera"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:text="카메라로 읽기"
        android:layout_gravity="center"
        android:textColor="#000000"
        />
</LinearLayout>
</android.support.constraint.ConstraintLayout>
