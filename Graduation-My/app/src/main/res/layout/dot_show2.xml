<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FCDBFD"
    >

    <ImageView
        android:id="@+id/Dot_img2"
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FCDBFD"
        android:scaleType="fitXY" />


    <ImageView
        android:id="@+id/Dot_img3"
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:background="#FCDBFD"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/Dot_img2"/>


    <TextView
        android:id="@+id/dot_txt2"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_below="@id/Dot_img2"
        android:background="#FCDBFD"
        android:ellipsize="middle"
        android:gravity="center"
        android:padding="2dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:layout_alignLeft="@id/Dot_img2"
        android:layout_alignRight="@id/Dot_img3"
        />
</RelativeLayout>